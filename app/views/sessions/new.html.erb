<div class = "user-signin">
  <h2> Sign in </h2>
  
  <% if(flash[:error]) %>
    <div class = "error-msg">
      <%= flash[:error] %>
    </div>
  <% end %>
  
  <%= form_with url: sessions_path do |form| %>
    <div class = "signin-field">
      <label> Email </label>
      <%= form.email_field :email %>
    </div>

    <div class = "signin-field">
      <label> Password </label>
      <%= form.password_field :password %>
    </div>
    
    <div class = "signin-field">
      <%= form.submit "Sign in", class: "form-submit" %>
    </div>
  <% end %>
</div>