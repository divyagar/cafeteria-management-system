<div class = "orders-list">

  <div class = "pending-orders">
    <h2> Pending </h2>
    <% if @pending_orders.count > 0 %>
      <div class = "orders">
        <table>
          <thead>
            <tr>
              <th> Ordered id </th>
              <% if @current_user.role == "Owner" %>
                <th> Customer Name </th>
              <% end %>
              <th> Ordered on </th>
              <th> Total amount </th>
              <% if @current_user.role == "Owner" %>
                <th> Mark as delievered </th>
              <% end %>
            </tr>
          </thead>
          
          <tbody>
            <% @pending_orders.each do |order| %>
              <tr>
                <td> <%= order.id %> </td>
                <% if @current_user.role == "Owner" %>
                  <td> <%= order.getUserName(order.user_id) %> </td>
                <% end %>
                <td> <%=  order.date %></td>
                <td> <%=  order.total_amount %></td>
                <% if @current_user.role == "Owner" %>
                  <td>
                    <%= form_with url: "/orders/delivered/#{order.id}", method: "get" do |form| %>
                      <%= form.submit "Delivered", 
                        class: "order-deliver-btn"
                      %>
                    <% end %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table
      </div>
    <% end %>
  </div>

  <div class = "delivered-orders">
    <h2> Delivered </h2>
    
    <% if @delivered_orders.count > 0 %>
      <div class = "orders">
        <table>
          <thead>
            <tr>
              <th> Ordered id </th>
              <% if @current_user.role == "Owner" %>
                <th> Customer Name </th>
              <% end %>
              <th> Ordered on </th>
              <th> Delivered on </th>
              <th> Total amount </th>
            </tr>
          </thead>
          
          <tbody>
            <% @delivered_orders.each do |order| %>
              <tr>
                <td> <%= order.id %> </td>
                <% if @current_user.role == "Owner" %>
                  <td> <%= order.getUserName(order.user_id) %> </td>
                <% end %>
                <td> <%=  order.date %></td>
                <td> <%=  order.delivered_on %></td>
                <td> <%=  order.total_amount %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>

  </div>

</div>